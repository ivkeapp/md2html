{
  "name": "@ivkeapp/md2html",
  "version": "1.0.0",
  "description": "A lightweight, dependency-minimal JavaScript library for converting Markdown to themed HTML in-browser",
  "main": "dist/md2html.min.js",
  "type": "module",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivkeapp/md2html.git"
  },
  "homepage": "https://github.com/ivkeapp/md2html#readme",
  "bugs": {
    "url": "https://github.com/ivkeapp/md2html/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "vite public --open",
    "build": "vite build && npm run bundle",
    "bundle": "rollup -c",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint ."
  },
  "keywords": [
    "markdown",
    "html",
    "converter",
    "themes",
    "browser",
    "gfm",
    "md2html",
    "markdown to html",
    "md"
  ],
  "author": "Ivan Žarković",
  "license": "GNU GENERAL PUBLIC LICENSE",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^8.55.0",
    "jsdom": "^23.0.1",
    "rollup": "^4.9.1",
    "vite": "^5.0.8",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "marked": "^11.1.0",
    "marked-gfm-heading-id": "^3.1.3",
    "dompurify": "^3.0.7"
  }
}
